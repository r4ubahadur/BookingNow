<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="15.0dip"
    android:paddingTop="18.0dip"
    android:paddingRight="15.0dip"
    android:paddingBottom="24.0dip"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_first_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        app:errorEnabled="true"
        style="@style/editTextBankStyle3">

        <EditText
            android:textSize="16dp"
            android:textColor="@color/black_primary"
            android:textColorHint="@color/hint_color"
            android:id="@+id/firstName"
            android:background="@drawable/bg_bottom_line_et_login_selected"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="First Name *"
            android:ems="15"
            android:singleLine="true"
            android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionNext"
            android:textCursorDrawable="@drawable/color_cursor" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_last_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip" app:errorEnabled="true" style="@style/editTextBankStyle3">
        <EditText
            android:textSize="16dp"
            android:textColor="@color/black_primary"
            android:textColorHint="@color/hint_color"
            android:id="@+id/lastName"
            android:background="@drawable/bg_bottom_line_et_login_selected"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name *"
            android:ems="15"
            android:singleLine="true"
            android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionNext"
            android:textCursorDrawable="@drawable/color_cursor" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip" app:errorEnabled="true" style="@style/editTextBankStyle3">
        <EditText
            android:textSize="16dp"
            android:textColor="@color/black_primary"
            android:textColorHint="@color/hint_color"
            android:id="@+id/phone"
            android:background="@drawable/bg_bottom_line_et_login_selected"
            android:paddingTop="5.0dip"
            android:paddingBottom="2.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number *"
            android:ems="15"
            android:singleLine="true"
            android:maxLength="10"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:textCursorDrawable="@drawable/color_cursor" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip" app:errorEnabled="true" style="@style/editTextBankStyle3">
        <EditText
            android:enabled="false"
            android:textSize="16dp"
            android:textColorHint="@color/hint_color"
            android:id="@+id/email"
            android:background="@drawable/bg_bottom_line_et_login_selected"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Email  (Optional)"
            android:cursorVisible="false"
            android:ems="15"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:imeOptions="actionDone"
            android:textCursorDrawable="@drawable/color_cursor" />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/black_primary"
        android:id="@+id/tv_gender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.0dip"
        android:layout_marginTop="10.0dip"
        android:text="@string/gender" />
    <RadioGroup
        android:orientation="horizontal"
        android:id="@+id/rg_gender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-2.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_alignParentLeft="true">

        <RadioButton
            android:theme="@style/radioButton"
            android:textSize="14.0sp"
            android:textColor="@color/black_primary"
            android:id="@+id/rb_male"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/male"
            android:layout_weight="1.0"
            android:fontFamily="sans-serif-medium" />
        <RadioButton
            android:theme="@style/radioButton"
            android:textSize="14.0sp"
            android:textColor="@color/black_primary"
            android:id="@+id/rb_female"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/female"
            android:layout_weight="1.0"
            android:fontFamily="sans-serif-medium" />

    </RadioGroup>

    <TextView
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/password_change"
        android:background="@color/btn_color_blue"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginBottom="15.0dip"
        android:text="Change Password"
        android:layout_below="@+id/profile" />

    <TextView
        android:textSize="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/save"
        android:background="@drawable/button_orange_bg"
        android:padding="12.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:text="Update Profile"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>
